<% include ../partials/header %>
<% include ../partials/menu %>

<style>
	.addAuthor {
		background-color: white;
		color: black;
		border: 1px solid #555555;
		border-radius: 4px;
	}
</style>

<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<meta name="description" content="">
	<title>Citation form</title>
	<link rel='icon' href='../resources/img/favicon.ico' type='image/x-icon' />
	<!-- Bootstrap core CSS -->
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css"
		integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">
	<link href="./resources/css/my_style.css" rel="stylesheet">
</head>

<body>
	<div class="container">
		<form class="form-citationForm" method="post">
			<h1>Cite Me!</h1>
			<form name="myform" id="myform" action="/citationForm" method="post">
				<input type="hidden" id="citeString" name="citeString" value="">
				<input type="submit" id="submitCite" class="btn btn-primary btn-block" value="Cite Me!">
				<table cellpadding="5">
					<tr>
						<td>
							<label class="standard_label_style"><strong>Source Type</strong></label>
						</td>
						<td>
							<label class="standard_label_style"><strong>Citation Style</strong></label>
						</td>
					</tr>
					<tr>
						<td>
							<select id="type">
								<option value="Book">Book</option>
								<option value="Webpage">Webpage</option>
								<option value="Journal">Journal</option>
								<option value="Magazine">Magazine</option>
								<option value="Newspaper">Newspaper</option>
							</select>
						</td>
						<td>
							<select id="style">
								<option value="MLA">MLA</option>
								<option value="APA">APA</option>
								<option value="Chicago">Chicago</option>
							</select>
						</td>
					</tr>
				</table>
				<br>
				<div>
					<div>
						<label id="instructions" class="standard_label_style">Fill in as many of the form fields as you
							can. Leave unknown fields blank.</label>
					</div>
					<label class="standard_label_style"><strong>Author Information</strong></label>
					<div id="author">
						<label id="authorLabel" class="standard_label_style" style="display:none;" default=""><u>First
								Author</u></label>
						<div class="form-group row">
							<label class="col-form-label col-sm-2" for="first">First Name: </label>
							<input type="text" class="form-control col-sm-4" name="first" id="first"
								placeholder="Enter First Name" default="">
						</div>
						<div class="form-group row">
							<label class="col-form-label col-sm-2" for="last">Last Name: </label>
							<input type="text" class="form-control col-sm-4" name="last" id="last"
								placeholder="Enter Last Name" default="">
						</div>
					</div>
					<div id="author2" style="display:none;">
						<label class="standard_label_style"><u>Second Author</u></label>
						<div class="form-group row">
							<label class="col-form-label col-sm-2" for="first2">First Name: </label>
							<input type="text" class="form-control col-sm-4" name="first2" id="first2"
								placeholder="Enter First Name" default="">
						</div>
						<div class="form-group row">
							<label class="col-form-label col-sm-2" for="last2">Last Name: </label>
							<input type="text" class="form-control col-sm-4" name="last2" id="last2"
								placeholder="Enter Last Name" default="">
						</div>
					</div>
					<div id="author3" style="display:none;">
						<label class="standard_label_style"><u>Third Author</u></label>
						<div class="form-group row">
							<label class="col-form-label col-sm-2" for="first3">First Name: </label>
							<input type="text" class="form-control col-sm-4" name="first3" id="first3"
								placeholder="Enter First Name" default="">
						</div>
						<div class="form-group row">
							<label class="col-form-label col-sm-2" for="last3">Last Name: </label>
							<input type="text" class="form-control col-sm-4" name="last3" id="last3"
								placeholder="Enter Last Name" default="">
						</div>
					</div>
					<button type="button" class="addAuthor" id="addAuthor">Add Another Author</button>
				</div>
				<br>
				<div>
					<label class="standard_label_style"><strong>Text Information</strong></label>
					<div id="article_input">
						<div class="form-group row">
							<label class="col-form-label col-sm-2" for="article_title">Article Title: </label>
							<input type="text" class="form-control col-sm-4" name="article_title" id="article_title"
								placeholder="Enter Article Title" default="">
						</div>
					</div>
					<div id="book_input">
						<div class="form-group row">
							<label class="col-form-label col-sm-2" for="book_title">Book Title: </label>
							<input type="text" class="form-control col-sm-4" name="book_title" id="book_title"
								placeholder="Enter Book Title" default="">
						</div>
					</div>
					<div id="website_input">
						<div class="form-group row">
							<label class="col-form-label col-sm-2" for="website_title">Website Title: </label>
							<input type="text" class="form-control col-sm-4" name="website_title" id="website_title"
								placeholder="Enter Website Title" default="">
						</div>
					</div>
					<div id="journal_input">
						<div class="form-group row">
							<label class="col-form-label col-sm-2" for="journal_name">Journal Name: </label>
							<input type="text" class="form-control col-sm-4" name="journal_name" id="journal_name"
								placeholder="Enter Journal Name" default="">
						</div>
					</div>
					<div id="magazine_input">
						<div class="form-group row">
							<label class="col-form-label col-sm-2" for="magazine_title">Magazine Title: </label>
							<input type="text" class="form-control col-sm-4" name="magazine_title" id="magazine_title"
								placeholder="Enter Magazine Title" default="">
						</div>
					</div>
					<div id="newspaper_input">
						<div class="form-group row">
							<label class="col-form-label col-sm-2" for="newspaper_name">Newspaper Name: </label>
							<input type="text" class="form-control col-sm-4" name="newspaper_name" id="newspaper_name"
								placeholder="Enter Newspaper Name" default="">
						</div>
					</div>
					<div id="database_input">
						<div class="form-group row">
							<label class="col-form-label col-sm-2" for="database_title">Database Title: </label>
							<input type="text" class="form-control col-sm-4" name="database_title" id="database_title"
								placeholder="Enter Database Title" default="">
						</div>
					</div>
				</div>
				<br>
				<div>
					<label class="standard_label_style"><strong>Publication Information</strong></label>
					<div id="publication_date">
						<form class="row">
							<label class="col-form-label col-sm-2">Publication Date: </label>
							<input type="date" id="pub_date" default="">
						</form>
					</div>
					<br>
					<div id="publisher">
						<div class="form-group row">
							<label class="col-form-label col-sm-2" for="publisher">Publisher: </label>
							<input type="text" class="form-control col-sm-4" name="publisher" id="pub"
								placeholder="Enter Publisher" default="">
						</div>
					</div>
					<div id="city">
						<div class="form-group row">
							<label class="col-form-label col-sm-2" for="city">City of Publication: </label>
							<input type="text" class="form-control col-sm-4" name="city" id="cty"
								placeholder="Enter City of Publication" default="">
						</div>
					</div>
					<div id="state">
						<div class="form-group row">
							<label class="col-form-label col-sm-2" for="state">State of Publication: </label>
							<input type="text" class="form-control col-sm-4" name="state" id="stt"
								placeholder="Enter State of Publication" default="">
						</div>
					</div>
				</div>
				<br>
				<div>
					<label class="standard_label_style"><strong>Additional Information</strong></label>
					<div id="pages">
						<div class="form-group row">
							<label class="col-form-label col-sm-2" for="pages">Pages: </label>
							<input type="text" class="form-control col-sm-4" name="pages" id="pgs"
								placeholder="Enter Pages" default="">
						</div>
					</div>
					<div id="volume">
						<div class="form-group row">
							<label class="col-form-label col-sm-2" for="volume">Volume: </label>
							<input type="text" class="form-control col-sm-4" name="volume" id="vol"
								placeholder="Enter Journal Volume" default="">
						</div>
					</div>
					<div id="issue">
						<div class="form-group row">
							<label class="col-form-label col-sm-2" for="issue">Issue: </label>
							<input type="text" class="form-control col-sm-4" name="issue" id="iss"
								placeholder="Enter Journal Issue" default="">
						</div>
					</div>
					<div id="edition">
						<div class="form-group row">
							<label class="col-form-label col-sm-2" for="edition">Edition: </label>
							<input type="text" class="form-control col-sm-4" name="edition" id="ed"
								placeholder="Enter Book Edition" default="">
						</div>
					</div>
					<div id="date_accessed_input">
						<form class="row">
							<label class="col-form-label col-sm-2">Date Accessed: </label>
							<input type="date" id="date_accessed" default="">
							<br>
					</div>
					<div id="doi_input">
						<div class="form-group row">
							<label class="col-form-label col-sm-2" for="doi">DOI: </label>
							<input type="text" class="form-control col-sm-4" name="doi" id="doi"
								placeholder="Enter DOI #" default="">
						</div>
					</div>
					<div id="URL_input">
						<div class="form-group row">
							<label class="col-form-label col-sm-2" for="url">URL: </label>
							<input type="text" class="form-control col-sm-4" name="url" id="url" placeholder="Enter URL"
								default="">
						</div>
					</div>
				</div>
			</form>
		</form>
	</div>
	<div id="printCite">
	</div>
	<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
		integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
		crossorigin="anonymous"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.6/umd/popper.min.js"
		integrity="sha384-wHAiFfRlMFy6i5SRaxvfOCifBUQy1xHdJ/yoi7FRNXMRBu5WHdZYu1hA6ZOblgut"
		crossorigin="anonymous"></script>
	<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/js/bootstrap.min.js"
		integrity="sha384-B0UglyR+jN6CkvvICOB2joaf5I4l3gm9GU6Hc1og6Ls7i6U/mkkaduKaBhlAXv9k"
		crossorigin="anonymous"></script>
	<script src="./resources/js/my_scripts.js"></script>
</body>


</html>

<% include ../partials/footer %>
